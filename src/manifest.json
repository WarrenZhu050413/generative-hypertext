{
  "manifest_version": 3,
  "name": "Nabokov Web Clipper",
  "version": "0.1.0",
  "description": "Clip web content and organize it in a visual canvas",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.tsx"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Open Nabokov Canvas"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "commands": {
    "activate-selector": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Ctrl+Shift+E"
      },
      "description": "Activate element selector (Canvas mode)"
    },
    "activate-selector-stash": {
      "suggested_key": {
        "default": "Alt+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Activate element selector (Stash mode)"
    },
    "toggle-inline-chat": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Ctrl+Shift+C"
      },
      "description": "Toggle inline chat with page"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/canvas/index.html",
        "src/canvas/*.js",
        "src/canvas/*.css",
        "src/sidepanel/index.html",
        "src/sidepanel/*.js",
        "src/sidepanel/*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}