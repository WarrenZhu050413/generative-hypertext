{
  "name": "nabokov-web-clipper",
  "version": "0.1.0",
  "description": "A Chrome extension for clipping web content and organizing it in a visual canvas",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:extension": "bash scripts/build-extension.sh",
    "watch:extension": "vite build --watch --mode development",
    "package:extension": "npm run build:extension && bash scripts/package-extension.sh",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "type-check": "tsc --noEmit",
    "backend": "node backend/server.mjs",
    "backend:dev": "nodemon backend/server.mjs"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.1",
    "@anthropic-ai/sdk": "^0.65.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@floating-ui/react": "^0.26.0",
    "@xyflow/react": "^12.3.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "isomorphic-dompurify": "^2.14.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-draggable": "^4.5.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.0.0",
    "@types/chrome": "^0.0.268",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.6.1",
    "fake-indexeddb": "^6.2.2",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
